@model UserCreateModel
@{ 
    Layout = "_Layout";
}
<div class="mt-4">
    <div class="py-5">
        <h2 class="mt-3 text-lg-center">Kayıt Ol</h2>
    </div>
    
    <form asp-action="SignUp" asp-controller="Account" method="post" class="w-50 p-4 mx-auto">

        <div class="mb-3">
            <label>Adınız : </label>
            <input asp-for="@Model.Firstname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyadınız : </label>
            <input asp-for="@Model.Surname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adınız : </label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız : </label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0">Cinsiyet Seçiniz..</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Parolanız : </label>
            <input asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Parola Tekrar : </label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary btn-sm">Kayıt Ol</button>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</div>