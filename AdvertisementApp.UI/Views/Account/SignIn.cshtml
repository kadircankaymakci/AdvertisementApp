@model AppUserLogInDto
@{
    Layout = "_Layout";
}
<div class="mt-4">
    <div class="py-5">
        <h2 class="mt-3 text-lg-center">Giriş Yap</h2>
    </div>

    <form asp-action="SignIn" asp-controller="Account" method="post" class="w-50 p-4 mx-auto">

        <div class="mb-3">
            <label>Kullanıcı Adınız : </label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Parolanız : </label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary btn-sm">Giriş Yap</button>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
    </form>
</div>